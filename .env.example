# Development Configuration
NODE_ENV=development
MCP_LOG_LEVEL=INFO

# Google OAuth Configuration
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback

# Optional: Google Cloud Project Configuration
# GOOGLE_PROJECT_ID=your_project_id_here

# Advanced Configuration (for future use)
# MCP_CACHE_ENABLED=true
# MCP_ENCRYPTION_KEY=your_encryption_key_here
# MCP_TOKEN_STORAGE_PATH=./tokens

# Server Configuration
# MCP_SERVER_PORT=8080
# MCP_SERVER_HOST=localhost

# Logging Configuration
# MCP_LOG_FILE=./logs/mcp-server.log
# MCP_LOG_MAX_SIZE=10MB
# MCP_LOG_MAX_FILES=5

# Rate Limiting (for future use)
# MCP_RATE_LIMIT_ENABLED=true
# MCP_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Configuration (for future use)
# MCP_ENABLE_CORS=false
# MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
