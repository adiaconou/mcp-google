{
  "name": "mcp-google",
  "version": "1.0.0",
  "description": "Google MCP Server - A secure, extensible middleware service that exposes Google APIs (Drive, Gmail, Calendar, Docs, Sheets) over the Model Control Protocol (MCP)",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "if not exist dist\\auth\\templates mkdir dist\\auth\\templates && copy src\\auth\\templates\\*.html dist\\auth\\templates\\",
    "build:watch": "tsc --watch",
    "dev": "nodemon --exec \"ts-node src/index.ts\"",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "dotenv": "^17.0.1",
    "google-auth-library": "^10.1.0",
    "googleapis": "^150.0.1",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "open": "^10.1.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
